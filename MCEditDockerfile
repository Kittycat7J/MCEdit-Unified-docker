FROM ubuntu:18.04
RUN date
COPY . /MCEdit
WORKDIR /MCEdit
RUN set -x \
    && apt-get -y update \
    && apt-get -y install \
        python-opengl \
        python-pygame \
        python-yaml \
        python-numpy \
        python-xlib \
        python-pip \
        xclip \
        && rm -rf /var/cache/apt/archives /var/lib/apt/lists/* \
    && set +x
RUN set -x \
    && pip install -r requirements-osx.txt \
    && python setup.py all \
    && set +x
RUN ./mcedit.sh./